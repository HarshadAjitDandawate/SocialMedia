<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Community</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="flex bg-gray-100">
    <div class="w-64 h-screen bg-white shadow-md fixed top-0 left-0">
        <%- include('layouts/sidebar') %>
    </div>

    <div class="flex-1 h-screen ml-64 overflow-y-auto p-6">
        <h1 class="text-3xl font-semibold text-gray-800 mb-6">Community</h1>

        <div class="space-y-6">
            <% posts.reverse().forEach(post => { %>
                <div class="bg-white shadow-sm rounded-lg p-6 max-w-2xl mx-auto">
                    <div class="flex justify-between text-gray-600 text-sm">
                        <p class="text-sky-500">@<%= post.user.username %></p>
                        <p><%= new Date(post.createdAt).toLocaleDateString() %></p>
                    </div>
                    <div class="mt-4">
                        <h2 class="text-2xl font-semibold text-gray-800"><%= post.title %></h2>
                        <p class="mt-2 text-gray-700"><%= post.description %></p>
                    </div>
                    <div class="mt-4 flex flex-wrap gap-2">
                        <% post.tags.forEach(tag => { %>
                            <span class="bg-blue-500 text-white text-xs px-2 py-1 rounded-full">
                                <%= tag %>
                            </span>
                        <% }) %>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
